.news-list
  @media screen and (max-width: 480px)
    margin-left -2.5em
    margin-right 1em

  li
    display flex

    @media screen and (max-width: 799px)
      display block
      margin-bottom 0.5em

  time
    width 5.5em
    color $light-gray
    white-space nowrap
    // Fix min-width in Safari
    flex-shrink 0

    @media screen and (max-width: 799px)
      display block
