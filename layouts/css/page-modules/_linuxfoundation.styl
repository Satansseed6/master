.linuxfoundation-footer
  padding 1em 20px
  font-size 14px
  color $white
  background $node-gray
  direction ltr

  p + p
    margin-top 0
    margin-bottom 0.25em

.issue-link-container
  display flex
  align-items center

.linuxfoundation-logo
  margin-top 0.2em
  min-width 1px
  max-width 416px

.issue-link
  text-align right
  min-width 330px
  margin-left auto

@media screen and (max-width: 700px)
  .issue-link-container
    flex-wrap wrap

  .issue-link
    text-align start
    margin 1em 0 0
    min-width 0
